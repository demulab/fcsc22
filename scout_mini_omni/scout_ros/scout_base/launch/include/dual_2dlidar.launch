<?xml version="1.0" encoding="utf-8"?>
<launch>
  <!-- メガローバーの旋回中心からLRFまでの座標変換の設定 -->
  <node pkg="tf" type="static_transform_publisher" name="stp_laser1" args="0 0.255 0 1.55 0 0 base_link base_laser_link_left 15 " />

  <node name="lidar1" pkg="urg_node" type="urg_node" output="screen">
    <param name="ip_address" value=""/>
    <param name="serial_port" value="/dev/ttyACM0"/>
    <param name="serial_baud" value="115200"/>
    <param name="frame_id" value="base_laser_link_left"/>
    <param name="calibrate_time" value="false"/>
    <param name="publish_intensity" value="true"/>
    <param name="publish_multiecho" value="false"/>
    <param name="angle_min" value="-1.75"/>
    <param name="angle_max" value="1.75"/>
    <remap from="scan" to="scan"/>
  </node>

   <node pkg="tf" type="static_transform_publisher" name="stp_laser2" args="0 -0.255 0 4.69 0 0 base_link base_laser_link_right 15 " />

  <node name="lidar2" pkg="urg_node" type="urg_node" output="screen">
    <param name="ip_address" value=""/>
    <param name="serial_port" value="/dev/ttyACM1"/>
    <param name="serial_baud" value="115200"/>
    <param name="frame_id" value="base_laser_link_right"/>
    <param name="calibrate_time" value="false"/>
    <param name="publish_intensity" value="true"/>
    <param name="publish_multiecho" value="false"/>
    <param name="angle_min" value="-1.75"/>
    <param name="angle_max" value="1.75"/>
    <remap from="scan" to="scan"/>
  </node>


</launch>

